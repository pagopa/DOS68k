{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "API Gateway",
  "extra_config": {
    "qos/ratelimit/service": {
      "max_rate": 100,
      "every": "1s",
      "capacity": 100,
      "client_max_rate": 100,
      "key": "Authorization",
      "strategy": "header",
      "client_capacity": 100
    },
    "security/cors": {
      "allow_origins": [
        "http://localhost"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "2h",
      "allow_methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ],
      "allow_headers": [
        "Authorization"
      ],
      "allow_credentials": true
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/auth/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://auth:3000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot/health/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/health/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot-evaluate/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-evaluate-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot-evaluate/health/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/health/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-evaluate-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot-index/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-index-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/chatbot-index/health/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/health/{path}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://chatbot-index-api:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}